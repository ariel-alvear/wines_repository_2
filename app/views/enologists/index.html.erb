<p id="notice"><%= notice %></p>

<h1>Enologists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nacionality</th>
      <th>Magazines</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @enologists.each do |enologist| %>
      <tr>
        <td><%= enologist.name %></td>
        <td><%= enologist.age %></td>
        <td><%= enologist.nacionality %></td>
        <td>
          <% EnologistMagazine.where(enologist_id: enologist.id).each do |enologist_magazine| %>
            <li><%= enologist_magazine.magazine.name %></li>
          <% end %>
        </td>
        <% if User.is_admin(current_user.id)%>
          <td><%= link_to 'Show', enologist %></td>
          <td><%= link_to 'Edit', edit_enologist_path(enologist) %></td>
          <td><%= link_to 'Destroy', enologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

